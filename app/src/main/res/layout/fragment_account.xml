<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAccount">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:titleEnabled="false"
            app:statusBarScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:layout_collapseMode="parallax">
                <ImageView
                    android:id="@+id/account_member_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_margin="10dp"/>
                <ImageView
                    android:id="@+id/account_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_adjust_black_18dp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/account_trip_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="트립닷컴 회원 ▶"
                    android:layout_toRightOf="@+id/account_member_image"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/account_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/silver"
                        android:layout_below="@+id/account_trip_member"
                        android:layout_alignLeft="@id/account_trip_member"
                        android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_member_image"
                    android:paddingVertical="10dp">
                    <LinearLayout
                        android:id="@+id/account_sale_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="할인코드"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="@color/colorGrey"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:id="@+id/account_trip_coin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="트립코인" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="20dp"
                        android:background="@color/colorGrey"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:id="@+id/account_favorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="즐겨찾기"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:alpha="0"
                android:background="@color/colorWhite"
                android:elevation="10dp"
                app:title="트립닷컴 회원"
                app:layout_collapseMode="pin">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_radius">
                <TextView
                    android:id="@+id/account_my_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    My 예약"
                    android:drawableLeft="@drawable/ic_event_note_black_18dp"
                    android:layout_margin="15dp"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체 보기"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="15dp"/>
                <View
                    android:id="@+id/account_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"
                    android:layout_marginHorizontal="10dp"
                    android:layout_below="@+id/account_my_reservation"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_line"
                    android:paddingVertical="30dp">
                    <TextView
                        android:id="@+id/account_pay_wait"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_payment_black_18dp"
                        android:text="결제 대기"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/account_new_reservation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_card_travel_black_18dp"
                        android:text="신규 예약"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/account_review_create"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_event_note_black_18dp"
                        android:text="리뷰 작성"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/account_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    저장카드 정보"
                android:drawableLeft="@drawable/ic_payment_black_18dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    여행자 정보"
                android:drawableLeft="@drawable/ic_perm_identity_black_18dp"
                android:background="@color/colorWhite"
                android:paddingLeft="10dp"
                android:paddingVertical="35dp"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    고객센터"
                android:drawableLeft="@drawable/ic_headset_mic_black_18dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    트립닷컴 소개"
                android:drawableLeft="@drawable/ic_info_black_18dp"
                android:background="@color/colorWhite"
                android:paddingLeft="10dp"
                android:paddingVertical="35dp"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    트립닷컴 리워드"
                android:drawableLeft="@drawable/ic_mood_black_18dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:paddingTop="35dp">
                <ImageView
                    android:id="@+id/account_share_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_black_18dp"
                    android:layout_alignBottom="@+id/account_share_subtext"
                    android:layout_alignTop="@+id/account_share_text"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/account_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    친구 초대하면 최대 10만원 할인"
                    android:layout_toRightOf="@+id/account_share_image"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/account_share_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     트립닷컴 앱을 나누면 기쁨은 10만원이 됩니다"
                    android:layout_below="@id/account_share_text"
                    android:layout_alignLeft="@id/account_share_text"
                    android:textSize="13sp"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>