<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/recycler_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_perm_identity_black_18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_text_tripcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="트립닷컴 챗봇"
        app:layout_constraintStart_toEndOf="@+id/recycler_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/corner_radius_faq"
        android:breakStrategy="balanced"
        android:maxWidth="200dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/recycler_image"
        app:layout_constraintTop_toBottomOf="@+id/recycler_text_tripcom"/>

    <ImageView
        android:id="@+id/recycler_up"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_thumb_up_alt_white_18dp"
        app:layout_constraintStart_toEndOf="@+id/recycler_message"
        app:layout_constraintTop_toTopOf="@+id/recycler_message"/>

    <ImageView
        android:id="@+id/recycler_down"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_thumb_down_alt_white_18dp"
        app:layout_constraintStart_toEndOf="@+id/recycler_message"
        app:layout_constraintTop_toBottomOf="@+id/recycler_up" />
</androidx.constraintlayout.widget.ConstraintLayout>